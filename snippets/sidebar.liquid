<aside class="sidebar">
  <section class="search-form">
    <form action="/archive" class="posthaven-archive-form">
      <input name="query" placeholder="Search..." type="text">
    </form>
  </section>

  {% if site.navigation_menu and site.navigation_menu.items != empty %}
    <nav class="menu">
      {% if site.navigation_menu and site.navigation_menu.items != empty %}
        <ul>
        {% for menu_item in site.navigation_menu.items %}
          <li id="menu_item_{{ menu_item.id }}" class="menu-item {{ menu_item.url | text_if_current}}">
            <a href="{{ menu_item.url }}">{{ menu_item.title }}</a>
          </li>
        {% endfor %}
        </ul>
      {% endif %}
    </nav>
  {% endif %}

  {% include 'blogroll' %}

  {% if site.subscription_enabled? %}
    {% include 'subscribe' %}
  {% endif %}

  {% if site.tags.size > 0 %}
    <section id="tag_list_menu" class="tags-simple">
      <h3>Tags</h3>

      <ul>
        {% for t in site.tags %}
          {% if forloop.index > 5 %}
            <li class='hide'>
          {% else %}
            <li>
          {% endif %}
            {% if tag and tag == t.name %}
              <strong>{{ t.name }} <span>{{ t.post_count }}</span></strong>
            {% else %}
              <a href="{{ t.url }}">{{ t.name }} <span>{{ t.post_count }}</span></a>
            {% endif %}
          </li>
        {% endfor %}
      </ul>

      {% if site.tags.size > 5 %}
        <div class="all-tags">
          <span class="cta-links show-all-tags">
            See all {{ site.tags.size }} tags
          </span>
        </div>
      {% endif %}
    </section>
  {% endif %}

  <section class="archives">
    <h3>Archive</h3>
    <a class="cta-links" href="{{ site.archive_url }}">Browse archive</a>
  </section>

    {% include 'contributors' %}
    {% include 'bio' %}
    {% include 'social' %}
</aside>
